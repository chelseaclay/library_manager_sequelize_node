extends layout

block content
    if errors
        ul
            each error in errors
                li= error.message
    h1 Patron: #{heading}
    p
        strong Book Title:
        |  #{loan.Book.title}
    p
        strong Loaned By:
        |  #{loan.Patron.first_name} #{loan.Patron.last_name}
    p
        strong Loaned On:
        |  #{loan.loaned_on}
    p
        strong Return By:
        |  #{loan.return_by}
    form(method='post' action=`/books/${loan.Book.id}/return`)
        p
            label(for='returned_on') Returned on:
            input#returned_on(type='text', name="returned_on" value=returned_on)
        p
            input(type='submit', value='Return Book')
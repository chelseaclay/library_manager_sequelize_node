extends layout

block content
    h1 #{heading}
    p
        a.button(href='../books/new_book') Create New Book

    form.search(method='get', action='../books/search')
        p
            input#search(type='search', name='search', placeholder='Search book, author, genre ...', aria-label='Search' value=search)
            input(type='submit', value='Search')

    p
        | Filters
        a(href='../books')  All
        |
        a(href='../books/overdue_books')  Overdue
        |
        a(href='../books/checked_books')  Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each book in books
                tr
                    td
                        a(href=`../books/${book.id}`) #{book.title}
                    td #{book.author}
                    td #{book.genre}
                    td #{book.first_published}

    if(pages.length > 1)
        each page in pages
            a(href=`?page=${page}`)= page

